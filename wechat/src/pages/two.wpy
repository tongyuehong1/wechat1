<script>
import wepy from 'wepy'
export default class Two extends wepy.page {
  config = {
    navigationBarTitleText: '陪你度过漫长岁月'
  }
  data = {
    src: '',
    lovers: '../images/lovers.jpg',
    // userInfo: '',
    nickName: '',
    avatarUrl: ''
  }
  methods = {
    missing() {
      wepy.navigateTo({
        url: './missing'
      })
    },
    photo() {
      wepy.navigateTo({
        url: './photo'
      })
    },
    memory() {
      wepy.navigateTo({
        url: './memory'
      })
    }
  }
  onLoad() {
    let self = this
    wepy.getUserInfo({
      success: function(res) {
        self.nickName = res.userInfo.nickName
        self.avatarUrl = res.userInfo.avatarUrl
      }
    })
  }
}
</script>
