      <view class="cir center">
        <image class="userinfo-avatar" src="{{ avatarUrl }}"/>
      </view>
      <view class="userinfo-nickname center">{{ nickName }}</view>
    </view>
    <view class="center choice">
      <text class="out" @tap="missing">纪念日</text>
      <text class="out everychoice" @tap="photo">照片集</text>
      <text class="out everychoice" @tap="memory">回忆集</text>
