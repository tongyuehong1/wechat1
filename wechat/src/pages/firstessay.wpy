<style lang="less">
.center {
  display: flex;
  justify-content: center;
  align-items: center;
}
.essay {
  display: flex;
  width: 18rem;
  font-size: 0.8rem;
  text-indent: 1.5rem;
}
.image {
  width: 18rem;
  height: 12rem;
}
.top {
  margin-top: 1rem;
}
.topline {
  display: flex;
  border-bottom: 1px solid gray;
}
