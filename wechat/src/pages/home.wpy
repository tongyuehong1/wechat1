<style lang="less">
.center {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.userinfo {
  display: flex;
  flex-direction: column; // background-color: gray;
  margin-top: 9rem;
  height: 3.8rem;
}

.cir {
  display: flex;
  border: 1px solid black;
  border-radius: 50%;
  height: 2.5rem;
  width: 2.5rem;
}

.userinfo-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}
.border {
  border: 2px solid lightgreen;
  background-color: lightgreen;
  width: 6rem;
  height: 2.2rem;
  border-radius: 30px;
}
