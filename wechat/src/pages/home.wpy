<template>
<view>
  <view class="center userinfo">
    <view class="cir center">
      <image class="userinfo-avatar" src="{{avatarUrl}}" />
    </view>
    <view class="userinfo-nickname center">{{nickName}}</view>
  </view>
  <view class="center mar">
  <view class="border center" @tap="hearts">授权登录</view>
  </view>
  </view>
</template>
<script>
import wepy from 'wepy'
export default class Letter extends wepy.page {
  config = {
    navigationBarTitleText: '登录'
  }
  data = {
    src: '',
    nickName: '',
    avatarUrl: ''
  }
  methods = {
    hearts() {
      wepy.switchTab({
        url: './hearts'
      })
    }
  }
  onLoad() {
    let self = this
    wepy.getUserInfo({
      success: function(res) {
        self.nickName = res.userInfo.nickName
        self.avatarUrl = res.userInfo.avatarUrl
      }
    })
  }
}
</script>
