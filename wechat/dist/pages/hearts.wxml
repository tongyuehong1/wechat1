
  <view>
    <view class="rowline"/>
    <view class="center">
      <view class="top row center">
        <view class="flex center">
          <view style="color: {{writecolor}};" bindtap="write">写信</view>
        </view>
        <view class="line"/>
        <view class="flex center">
          <view style="color: {{sendcolor}};" bindtap="send">收信</view>
