
<view>
  <view class="line"/>
  <scroll-view scroll-y style="height:{{height-1}}px; width:{{width}}px; background-color:#f4f5f7">
    <view class="top"/>
      <view class="every center" bindtap="show"  wx:for="{{text}}" wx:key="index" data-index="{{index}}">
        <image class="pic" src="{{item.pic}}"/>
        <view class="word">
          <view>{{item.title}}</view>
          <view class="sentence">{{item.brief}}</view>
        </view>
      </view>
    <view style="height: 1.5rem; background-color:#f4f5f7"/>
  </scroll-view>
</view>