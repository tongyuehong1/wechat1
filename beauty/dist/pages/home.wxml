
<view>
  <view style="height:0.3rem; background-color:#f4f5f7"/>
  <scroll-view scroll-y style="height:{{height-6}}px; width:{{width}}px; background-color: #f4f5f7;">
    <view class="row center" style="height:1.6rem;">
      <view class="word">搜一下</view>
      <view style="margin-left: 0.3rem;">
      <input class="searchborder word"/>
      </view>
    </view>
  <view class="center">
    <swiper autoplay="true" interval="1000" class="slide-image margintop" circular="true" indicator-dots="true">
      <block  wx:for="{{img}}" wx:key="index">
        <swiper-item>
            <image src="{{item}}" class="slide-image"/>
        </swiper-item>
        </block>
    </swiper>
  </view>
  <view class="center" style="display:flex; flex-direction: column">
    <view class="littleicon">
      <view class="cir"  wx:for="{{firsticons}}" wx:key="index">
        <image src="{{item}}" class="icons"/>
      </view>
    </view> 
    <view class="center">
      <view style="display: flex; flex-direction: row; justify-content: space-between; width: 17rem">
        <view class="iconsword center" wx:for="{{firstword}}" wx:key="index">
          <text>{{item}}</text>
        </view>
      </view>
    </view>
    <view class="littleicon">
      <view class="cir" wx:for="{{secondicons}}" wx:key="index">
        <image src="{{item}}" class="icons"/>
      </view>
    </view> 
     <view class="center between">
      <view style="display: flex; flex-direction: row; justify-content: space-between; width: 17rem">
        <view class="iconsword center" wx:for="{{firstword}}" wx:key="index">
          <text>{{item}}</text>
        </view>
      </view>
    </view>
    </view>
    <view class="center">
      <view style="width: 18rem" class="row between">
        <view wx:for="{{firstdisplay}}" wx:key="index">
          <image bindtap="next" src="{{item}}" style="height:8rem; width: 8rem;margin-top:1.2rem"/>
        </view>
      </view>
    </view>
    <view class="center">
      <view class="between" wx:for="{{firsttitle}}" wx:key="index">
        <text class="text" style="width: 8rem; margin-right: 1rem;margin-left:1rem; margin-top:0.5rem">{{item}}</text>
      </view>
    </view>
    <view class="center">
      <view style="width: 18rem" class="row between">
        <view wx:for="{{firstdisplay}}" wx:key="index">
          <image src="{{item}}" style="height:8rem; width: 8rem;margin-top:1.2rem"/>
        </view>
      </view>
    </view>
  </scroll-view>
</view>